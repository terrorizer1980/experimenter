{
  "name": "@experimenter/core",
  "license": "MPL-2.0",
  "jest": {
    "automock": false,
    "verbose": true,
    "setupFiles": [
      "<rootDir>/js/tests/setup.js"
    ],
    "coverageReporters": [
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 100
      }
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      "^experimenter/(.*)$": "<rootDir>/js/$1"
    },
    "collectCoverageFrom": [
      "<rootDir>/js/components/**"
    ]
  },
  "version": "1.0.0",
  "description": "a tool for managing experiments in Firefox",
  "dependencies": {
    "@fortawesome/fontawesome-free": "5.15.2",
    "@testing-library/dom": "7.29.6",
    "autobind-decorator": "2.4.0",
    "bootstrap": "5.0.0",
    "bootstrap-select": "1.13.18",
    "fontsource-fira-sans": "3.0.5",
    "immutable": "4.0.0-rc.12",
    "jquery": "3.5.1",
    "popper.js": "1.16.1",
    "prettier": "2.2.1",
    "react": "16.13.1",
    "react-bootstrap": "1.5.2",
    "react-dom": "16.13.1",
    "react-select": "^4.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-0",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-decorators": "7.13.5",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "7.12.13",
    "@testing-library/jest-dom": "5.11.9",
    "@testing-library/react": "11.0.4",
    "babel-eslint": "10.1.0",
    "babel-jest": "26.6.3",
    "eslint": "7.22.0",
    "eslint-config-prettier": "7.0.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-import": "2.21.2",
    "eslint-plugin-jest": "24.1.8",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-react": "7.20.6",
    "eslint-plugin-standard": "5.0.0",
    "faker": "5.3.1",
    "jest": "26.6.3",
    "jest-dom": "4.0.0",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "parcel-bundler": "1.12.4"
  },
  "alias": {
    "experimenter": "./js"
  },
  "scripts": {
    "test": "jest --silent --coverage --env=jest-environment-jsdom-sixteen",
    "build": "parcel build css/index.css js/index.js --out-dir ../assets --public-url /static/assets/ --no-source-maps",
    "watch": "parcel watch css/index.css js/index.js --out-dir ../assets --public-url /static/assets/",
    "lint": "eslint js/components/**/*.js js/tests/**/*.js js/index.js",
    "lint-fix": "eslint --fix js/components/**/*.js js/tests/**/*.js js/index.js"
  },
  "browserslist": [
    "last 1 firefox versions"
  ],
  "babel": {
    "presets": [
      "@babel/preset-react",
      "@babel/preset-env"
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        },
        "@babel/plugin-proposal-decorators"
      ],
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        },
        "@babel/plugin-proposal-class-properties"
      ],
      [
        "@babel/plugin-proposal-private-methods",
        {
          "loose": true
        },
        "@babel/plugin-proposal-private-methods"
      ]
    ]
  }
}
